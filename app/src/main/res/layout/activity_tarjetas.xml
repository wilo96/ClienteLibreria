<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tarjetas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese una Nueva Tarjeta"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginLeft="30dp"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Numero de Tarjeta"
    android:textColor="@android:color/black"
    android:layout_marginTop="50dp"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:id="@+id/tarjtxt"
        android:numeric="integer"
        android:inputType="number"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero de Seguridad"
        android:textColor="@android:color/black"
        android:layout_marginTop="150dp"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:id="@+id/numsegtxt"
        android:numeric="integer"
        android:inputType="number"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empresa"
        android:textColor="@android:color/black"
        android:layout_marginTop="250dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:id="@+id/empresatxt"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:layout_marginTop="350dp"
        android:id="@+id/nuevatarjbtn"
        />

</RelativeLayout>